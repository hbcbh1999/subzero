{
  "name": "subzerocloud",
  "version": "0.1.2",
  "description": "Automated REST and GraphQL api for your database",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/**/*",
    "LICENSE.txt",
    "README.md"
  ],
  "scripts": {
    "build": "node esbuild.config.cjs && tsc --emitDeclarationOnly --outDir dist",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src",
    "prepare": "npm run build",
    "prepack": "cp ../LICENSE.txt .",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint"
  },
  "keywords": [
    "rest",
    "graphql",
    "postgrest",
    "postgresql",
    "sqlite",
    "clickhouse"
  ],
  "author": "Ruslan Talpa <ruslan.talpa@subzero.cloud>",
  "license": "SEE LICENSE.txt",
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "esbuild": "^0.15.10",
    "eslint": "^8.25.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "sqlite": "^4.1.2",
    "sqlite3": "^5.1.2",
    "ts-jest": "^29.0.3",
    "ts-jest-mock-import-meta": "^0.12.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4"
  }
}
